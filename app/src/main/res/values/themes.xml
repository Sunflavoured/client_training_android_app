<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme -->
    <style name="Theme.TrainerApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Colors (Deep Blue/Navy) -->
        <item name="colorPrimary">#1E3A8A</item>          <!-- Deep Blue -->
        <item name="colorOnPrimary">#FFFFFF</item>        <!-- White text on primary -->
        <item name="colorPrimaryContainer">#DBEAFE</item> <!-- Light blue container -->
        <item name="colorOnPrimaryContainer">#1E3A8A</item>

        <!-- Secondary Colors (Energetic Orange/Coral) -->
        <item name="colorSecondary">#F97316</item>        <!-- Vibrant Orange -->
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#FFEDD5</item>
        <item name="colorOnSecondaryContainer">#C2410C</item>

        <!-- Tertiary Colors (Success Green) -->
        <item name="colorTertiary">#10B981</item>         <!-- Fresh Green -->
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#D1FAE5</item>
        <item name="colorOnTertiaryContainer">#065F46</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">#F8FAFC</item> <!-- Light gray background -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#1E293B</item>
        <item name="colorSurfaceVariant">#F1F5F9</item>
        <item name="colorOnSurfaceVariant">#64748B</item>

        <!-- Error Colors -->
        <item name="colorError">#EF4444</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">#1E293B</item>   <!-- Dark slate -->
        <item name="android:textColorSecondary">#64748B</item>  <!-- Medium gray -->
        <item name="android:textColorHint">#94A3B8</item>       <!-- Light gray -->

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Apply custom styles -->
        <item name="materialButtonStyle">@style/Widget.TrainerApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.TrainerApp.Card</item>
        <item name="textInputStyle">@style/Widget.TrainerApp.TextInputLayout</item>
    </style>



    <!-- ========================================== -->
    <!-- BUTTON STYLES -->
    <!-- ========================================== -->

    <!-- Primary Button (Filled) -->
    <style name="Widget.TrainerApp.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.TrainerApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.TrainerApp.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Icon Button -->
    <style name="Widget.TrainerApp.Button.Icon" parent="Widget.Material3.Button.Icon">
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ========================================== -->
    <!-- CARD STYLES -->
    <!-- ========================================== -->

    <style name="Widget.TrainerApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.TrainerApp.Card.Basic" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.TrainerApp.Card.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.TrainerApp.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E2E8F0</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- ========================================== -->
    <!-- TOOLBAR STYLE -->
    <!-- ========================================== -->

    <style name="Widget.TrainerApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:elevation">4dp</item>
        <item name="elevation">4dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <!-- ========================================== -->
    <!-- TEXT INPUT STYLES -->
    <!-- ========================================== -->

    <style name="Widget.TrainerApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <!-- ========================================== -->
    <!-- TEXT STYLES -->
    <!-- ========================================== -->

    <!-- Headline (Large titles) -->
    <style name="TextAppearance.TrainerApp.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Title -->
    <style name="TextAppearance.TrainerApp.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.TrainerApp.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Caption -->
    <style name="TextAppearance.TrainerApp.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- ========================================== -->
    <!-- FLOATING ACTION BUTTON -->
    <!-- ========================================== -->

    <style name="Widget.TrainerApp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.TrainerApp.FAB</item>
    </style>

    <style name="ShapeAppearance.TrainerApp.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">16dp</item>
    </style>

</resources>