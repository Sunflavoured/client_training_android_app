<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bench Press"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Cíl: 4 série x 10 opakování"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView android:layout_width="24dp" android:layout_height="wrap_content" android:text="#" android:gravity="center" android:textStyle="bold"/>

            <TextView android:id="@+id/hWeight" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Váha" android:gravity="center" android:textSize="12sp"/>
            <TextView android:id="@+id/hReps" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Opak." android:gravity="center" android:textSize="12sp"/>

            <TextView android:id="@+id/hTime" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Čas" android:gravity="center" android:textSize="12sp" android:visibility="gone"/>
            <TextView android:id="@+id/hDistance" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Vzdál." android:gravity="center" android:textSize="12sp" android:visibility="gone"/>

            <TextView android:id="@+id/hRir" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="RIR" android:gravity="center" android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:id="@+id/llSetsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btnAddSet"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Přidat sérii"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>