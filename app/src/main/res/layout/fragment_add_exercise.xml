<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Název cviku -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.TrainerApp.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Název cviku"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etExerciseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kategorie (Dropdown) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategorie"
            android:layout_marginBottom="16dp">

            <AutoCompleteTextView
                android:id="@+id/actvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Popis -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.TrainerApp.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Popis provedení"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etExerciseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Svalové skupiny (vypadá jako dropdown, ale otevírá dialog) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMuscleGroups"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Svalové skupiny"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <AutoCompleteTextView
                android:id="@+id/actvMuscleGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false"
                android:text="Vyberte svalové skupiny" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tlačítko Uložit -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveExercise"
            style="@style/Widget.TrainerApp.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uložit cvik"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>