<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.client_training_app.HomeFragment"
        android:label="Trainer App" />

    <!-- Profiles/Clients -->
    <fragment
        android:id="@+id/profilesFragment"
        android:name="com.example.client_training_app.ProfilesFragment"
        android:label="Profily" >
        <action
            android:id="@+id/action_profilesFragment_to_clientDetailFragment"
            app:destination="@id/clientDetailFragment">
            <argument
                android:name="clientId"
                app:argType="string" />
        </action>
    <action
        android:id="@+id/action_profilesFragment_to_addProfileFragment"
        app:destination="@id/addProfileFragment" />
    </fragment>

    <!-- Add Profiles/Clients -->
    <fragment
        android:id="@+id/addProfileFragment"
        android:name="com.example.client_training_app.AddProfileFragment"
        android:label="Nový profil klienta" />

    <fragment
        android:id="@+id/clientDetailFragment"
        android:name="com.example.client_training_app.ClientDetailFragment"
        android:label="Detail klienta">
            <argument
                android:name="clientId"
                app:argType="string"/>
            <action
                android:id="@+id/action_clientDetailFragment_to_trainingCalendarFragment"
                app:destination="@id/trainingCalendarFragment" />

    </fragment>


    <!-- Add Measurments -->
    <fragment
        android:id="@+id/addMeasurementFragment"
        android:name="com.example.client_training_app.AddMeasurementFragment"
        android:label="Nové měření">

        <argument
            android:name="clientId"
            app:argType="string"/>
    </fragment>

    <!-- Calendar -->
    <fragment
        android:id="@+id/trainingCalendarFragment"
        android:name="com.example.client_training_app.TrainingCalendarFragment"
        android:label="Tréninkový kalendář">

        <argument
            android:name="clientId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.example.client_training_app.ExerciseFragment"
        android:label="Cviky">
        <action
            android:id="@+id/action_exercisesFragment_to_exerciseDetailFragment"
            app:destination="@id/exerciseDetailFragment" />
        <action
            android:id="@+id/action_exercisesFragment_to_addExerciseFragment"
            app:destination="@id/addExerciseFragment" />

    </fragment>

    <fragment
        android:id="@+id/exerciseDetailFragment"
        android:name="com.example.client_training_app.ExerciseDetailFragment"
        android:label="Detail cviku">

        <!-- Argument musí být uvnitř fragmentu -->
        <argument
            android:name="exerciseId"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/addExerciseFragment"
        android:name="com.example.client_training_app.AddExerciseFragment"
        android:label="Přidat cvik" >
        <action
            android:id="@+id/action_addExerciseFragment_to_selectMuscleGroupsFragment"
            app:destination="@id/selectMuscleGroupsFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/selectMuscleGroupsFragment"
        android:name="com.example.client_training_app.SelectMuscleGroupsFragment"
        android:label="Vybrat svaly" >

        <argument
            android:name="currentSelection"
            app:argType="string[]" />
    </fragment>



</navigation>
