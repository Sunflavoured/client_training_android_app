<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.client_training_app.ui.home.HomeFragment"
        android:label="Trainer App" />

    <!-- Profiles/Clients -->
    <fragment
        android:id="@+id/profilesFragment"
        android:name="com.example.client_training_app.ui.profile.ProfilesFragment"
        android:label="Profily" >
        <action
            android:id="@+id/action_profilesFragment_to_clientDetailFragment"
            app:destination="@id/clientDetailFragment">
            <argument
                android:name="clientId"
                app:argType="string" />
        </action>
    <action
        android:id="@+id/action_profilesFragment_to_addProfileFragment"
        app:destination="@id/addProfileFragment" />
    </fragment>

    <!-- Add Profiles/Clients -->
    <fragment
        android:id="@+id/addProfileFragment"
        android:name="com.example.client_training_app.ui.profile.AddProfileFragment"
        android:label="Nový profil klienta" >
        <argument
            android:name="clientId"
            app:argType="string"
            app:nullable="true">

        </argument>
    </fragment>

    <fragment
        android:id="@+id/clientDetailFragment"
        android:name="com.example.client_training_app.ui.profile.ProfileDetailFragment"
        android:label="Detail klienta">
            <argument
                android:name="clientId"
                app:argType="string"/>
            <action
                android:id="@+id/action_clientDetailFragment_to_trainingCalendarFragment"
                app:destination="@id/trainingCalendarFragment" />
        <action
            android:id="@+id/action_clientDetailFragment_to_addProfileFragment"
            app:destination="@id/addProfileFragment">

        </action>

    </fragment>

    <!-- Add Measurments -->
        <fragment
            android:id="@+id/addMeasurementFragment"
            android:name="com.example.client_training_app.ui.profile.AddMeasurementFragment"
            android:label="Nové měření">

            <argument
                android:name="clientId"
                app:argType="string"/>
        </fragment>

        <!-- Calendar -->
    <fragment
        android:id="@+id/trainingCalendarFragment"
        android:name="com.example.client_training_app.ui.training_calendar.TrainingCalendarFragment"
        android:label="Tréninkový kalendář">

        <argument
            android:name="clientId"
            app:argType="string" />

        <action
            android:id="@+id/action_trainingCalendarFragment_to_activeWorkoutFragment"
            app:destination="@id/activeWorkoutFragment" />
    </fragment>

    <fragment
        android:id="@+id/activeWorkoutFragment"
        android:name="com.example.client_training_app.ui.active_workout.ActiveWorkoutFragment"
        android:label="Aktivní trénink">
        <action
            android:id="@+id/action_activeWorkoutFragment_to_exercisePickerFragment"
            app:destination="@id/exercisePickerFragment" />
        <action
            android:id="@+id/action_activeWorkout_to_history"
            app:destination="@id/exerciseHistoryFragment" />
        <action
            android:id="@+id/action_activeWorkout_to_detail"
            app:destination="@id/exerciseDetailFragment" />

        <argument
            android:name="trainingTitle"
            app:argType="string"
            android:defaultValue="Trénink" />

        <argument
            android:name="trainingUnitId"
            app:argType="string" />

        <argument
            android:name="clientId"
            app:argType="string" />

        <argument
            android:name="scheduledWorkoutId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <!-- Exercises -->
    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.example.client_training_app.ui.exercise.ExerciseLibraryFragment"
        android:label="Cviky">
        <action
            android:id="@+id/action_exercisesFragment_to_exerciseDetailFragment"
            app:destination="@id/exerciseDetailFragment" />
        <action
            android:id="@+id/action_exercisesFragment_to_addExerciseFragment"
            app:destination="@id/addExerciseFragment" />

    </fragment>

    <!-- Přidání treninkové jednotky -->
    <fragment
        android:id="@+id/trainingUnitEditorFragment"
        android:name="com.example.client_training_app.ui.training_unit.TrainingUnitEditorFragment"
        android:label="Editor tréninku">

        <argument
            android:name="clientId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <argument
            android:name="trainingUnitIdToEdit"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <action
            android:id="@+id/action_trainingUnitEditorFragment_to_exercisePickerFragment"
            app:destination="@id/exercisePickerFragment" />

    </fragment>

    <fragment
        android:id="@+id/exercisePickerFragment"
        android:name="com.example.client_training_app.ui.training_unit.ExercisePickerFragment"
        android:label="Vybrat cviky" />

    <fragment
        android:id="@+id/exerciseDetailFragment"
        android:name="com.example.client_training_app.ui.exercise.ExerciseDetailFragment"
        android:label="Detail cviku">

        <!-- Argument musí být uvnitř fragmentu -->
        <argument
            android:name="exerciseId"
            app:argType="string" />
    </fragment>


    <fragment
        android:id="@+id/addExerciseFragment"
        android:name="com.example.client_training_app.ui.exercise.AddExerciseFragment"
        android:label="Přidat cvik" >
    </fragment>


    <!-- Training Unit -->
    <fragment
        android:id="@+id/trainingUnitLibraryFragment"
        android:name="com.example.client_training_app.ui.training_unit.TrainingUnitLibraryFragment"
        android:label="Knihovna tréninků">
        <action
            android:id="@+id/action_trainingUnitLibraryFragment_to_trainingUnitEditorFragment"
            app:destination="@id/trainingUnitEditorFragment" />

        <action
            android:id="@+id/action_trainingUnitLibraryFragment_to_trainingUnitDetailFragment"
            app:destination="@id/trainingUnitDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/trainingUnitDetailFragment"
        android:name="com.example.client_training_app.ui.training_unit.TrainingUnitDetailFragment"
        android:label="Detail tréninku">
        <argument
            android:name="trainingUnitId"
            app:argType="string" />
        <action
            android:id="@+id/action_trainingUnitDetailFragment_to_trainingUnitEditorFragment"
            app:destination="@id/trainingUnitEditorFragment" />
    </fragment>

    <fragment
        android:id="@+id/exerciseHistoryFragment"
        android:name="com.example.client_training_app.ui.exercise_history.ExerciseHistoryFragment"
        android:label="Historie cviku">
        <argument
            android:name="clientId"
            app:argType="string" />
        <argument
            android:name="exerciseId"
            app:argType="string" />
        <argument
            android:name="exerciseName"
            app:argType="string" />
    </fragment>


</navigation>
